// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Activity {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  category     String
  city         String
  place        String
  createdAt    DateTime @default(now())
  activityDate DateTime
  activityTime String
  organizers   String
  imageUrl     String
  latitude     String
  longitude    String
  address      String
  isPopuler    Boolean
  isFree       Boolean
  price        Int
}
